
Assignment 4

#include <iostream>
#include <algorithm>
using namespace std;

int linearSearch(int arr[], int n, int key) {
    for(int i = 0; i < n; i++) {
        if(arr[i] == key)
            return i;
    }
    return -1;
}

int binarySearch(int arr[], int n, int key) {
    int low = 0, high = n - 1;

    while(low <= high) {
        int mid = (low + high) / 2;

        if(arr[mid] == key)
            return mid;
        else if(arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

int main() {
    int scores[20];
    int n = 10;

    for(int i = 0; i < n; i++) {
        cin >> scores[i];
    }

    int sum = 0;
    for(int i = 0; i < n; i++) {
        sum += scores[i];
    }
    float average = (float)sum / n;
    cout << "Average Score = " << average << endl;

    int newScore;
    cin >> newScore;

    for(int i = n; i > 4; i--) {
        scores[i] = scores[i - 1];
    }
    scores[4] = newScore;
    n++;

    for(int i = 0; i < n; i++) {
        cout << scores[i] << " ";
    }
    cout << endl;

    int minVal = scores[0], minIndex = 0;
    for(int i = 1; i < n; i++) {
        if(scores[i] < minVal) {
            minVal = scores[i];
            minIndex = i;
        }
    }

    for(int i = minIndex; i < n - 1; i++) {
        scores[i] = scores[i + 1];
    }
    n--;

    for(int i = 0; i < n; i++) {
        cout << scores[i] << " ";
    }
    cout << endl;

    int key;
    cin >> key;

    int Lindex = linearSearch(scores, n, key);
    if(Lindex != -1)
        cout << "Linear Search: Found at index " << Lindex << endl;
    else
        cout << "Linear Search: Not Found" << endl;

    sort(scores, scores + n);
    int Bindex = binarySearch(scores, n, key);

    if(Bindex != -1)
        cout << "Binary Search: Found at index " << Bindex << endl;
    else
        cout << "Binary Search: Not Found" << endl;

    return 0;
}
